@{
    ViewData["Title"] = "Home Page";
}

<!-- Include Lottie Web library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.1/lottie.min.js"></script>

<!-- Lottie full-screen background -->
<div id="lottie-background" style="
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: black;">
</div>

<!-- Page content -->
<div style="position: relative; z-index: 1; display: flex; align-items: center; justify-content: center; height: 100vh; flex-direction: column; text-align: center; padding: 0 50px;">
    <h1 style="font-size: 4rem; font-weight: bold; color: #5DADE2; margin-bottom: 30px;">
        Welcome To The Disaster App
    </h1>
    <a href="@Url.Action("Login", "Home")" style="text-decoration: none;">
        <button style="
            background-color: #1AC782;
            color: #fff;
            font-weight: bold;
            font-size: 1.2rem;
            padding: 15px 30px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;"
                onmouseover="this.style.backgroundColor='#17B074'; this.style.transform='translateY(-2px)';"
                onmouseout="this.style.backgroundColor='#1AC782'; this.style.transform='translateY(0)';">
            Start
        </button>
    </a>
</div>

<!-- Lottie initialization -->
<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie-background'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/lottie/Background looping animation.json'
    });
</script>

<!-- Optional CSS to make Lottie responsive -->
<style>
    #lottie-background svg {
        width: 100% !important;
        height: 100% !important;
    }
</style>