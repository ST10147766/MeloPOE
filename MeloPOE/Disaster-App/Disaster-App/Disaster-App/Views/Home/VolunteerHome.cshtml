        align-items: center;
        justify-content: center;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .dashboard-title {
        color: #5DADE2;
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 15px;
        text-shadow: 0 2px 10px rgba(93, 173, 226, 0.3);
    }

    .dashboard-subtitle {
        color: #AED6F1;
        font-size: 1.3rem;
        margin: 0;
    }

    .buttons-grid {
        display: flex;
        flex-direction: column;
        gap: 30px;
        width: 100%;
        max-width: 900px;
    }

    .button-row {
        display: flex;
        gap: 30px;
        justify-content: center;
    }

    .dashboard-button {
        flex: 1;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
