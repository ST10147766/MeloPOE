@{
    ViewData["Title"] = "VolunteerHome";
}

<!-- Include Lottie Web library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.1/lottie.min.js"></script>

<!-- Lottie full-screen background -->
<div id="lottie-background" style="
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: black;">
</div>

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-title">Welcome to Volunteer Dashboard</h1>
        <p class="dashboard-subtitle">Manage your volunteer activities and make a difference</p>
    </div>

    <div class="buttons-grid">
        <!-- Row 1 -->
        <div class="button-row">
            <a href="@Url.Action("Volunteerss", "Home")" class="dashboard-button incident-button">
                <div class="button-content">
                    <span class="button-icon">👥</span>
                    <span class="button-text">Become a Volunteer</span>
                    <span class="button-description">Update your skills and availability</span>
                </div>
            </a>

            <a href="@Url.Action("VolunteerTask", "Home")" class="dashboard-button donation-button">
                <div class="button-content">
                    <span class="button-icon">📝</span>
                    <span class="button-text">Create Volunteer Task</span>
                    <span class="button-description">Assign tasks to volunteers</span>
                </div>
            </a>

        <!-- Row 2 -->
            <a href="@Url.Action("ViewVolunteerTasks", "Home")" class="dashboard-button view-donations-button">
                <div class="button-content">
                    <span class="button-icon">📊</span>
                    <span class="button-text">View Volunteer Tasks</span>
                    <span class="button-description">Monitor all tasks</span>
                </div>
            </a>

            <a href="@Url.Action("ViewVolunteers", "Home")" class="dashboard-button view-incidents-button">
                <div class="button-content">
                    <span class="button-icon">👥</span>
                    <span class="button-text">View Volunteers</span>
                    <span class="button-description">See all registered volunteers</span>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Lottie initialization -->
<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById('lottie-background'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/lottie/Background looping animation.json'
    });
</script>

<!-- Keep your existing CSS styles -->

<style>
